<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_bot_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/style_receive_round_box"
        android:backgroundTint="@color/bot_message_bg"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_bot_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI发送的信息"
            android:maxWidth="300dp"
            android:minWidth="100dp"
            android:textColor="@color/bot_message_text"
            android:textSize="18sp"
            android:visibility="visible" />
        <!-- 按钮组 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_play"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_play" />
            <Button
                android:id="@+id/btn_refresh"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/ic_refresh"/>
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:background="@drawable/style_send_round_box"
        android:backgroundTint="@color/user_message_bg"
        android:maxWidth="300dp"
        android:padding="15dp"
        android:text="测试1234567890"
        android:textColor="@color/user_message_text"
        android:textSize="18sp"
        android:visibility="visible" />

</RelativeLayout>
